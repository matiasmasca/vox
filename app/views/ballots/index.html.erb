<h1>Listing ballots</h1>

<table>
  <thead>
    <tr>
      <th>Selection process</th>
      <th>Category</th>
      <th>Candidate</th>
      <th>Digital signature</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ballots.each do |ballot| %>
      <tr>
        <td><%= ballot.selection_process %></td>
        <td><%= ballot.category %></td>
        <td><%= ballot.candidate %></td>
        <td><%= ballot.digital_signature %></td>
        <td><%= link_to 'Show', ballot %></td>
        <td><%= link_to 'Edit', edit_ballot_path(ballot) %></td>
        <td><%= link_to 'Destroy', ballot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

