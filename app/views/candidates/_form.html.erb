<%= form_for @candidate, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @candidate.errors.any? %>
    <div id="alert alert-danger">
      <h2><%= pluralize(@candidate.errors.count, "error") %> prohibe/en que los datos sean guardados:</h2>

      <ul>
      <% @candidate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <p> ID Proceso y ID Categoria. solo en Back-end del Admin.</p>
  <p>
    <strong>ID Proceso:</strong>
    <%= @candidate.category_id %>
  </p>
    <div class="form-group">
    <%= f.label :category_id, "Cod. CategorÃ­a", class: 'control-label' %><br>
    <%= f.text_field :category_id,  class: "form-control", size: "10"  %>
  </div>

  <div class="form-group">
    <%= f.label :name, "Nombre y Apellido", class: 'control-label' %><br>
    <%= f.text_field :name,  class: "form-control", size: "10", maxlength: "110"  %>
  </div>
  <div class="form-group">
