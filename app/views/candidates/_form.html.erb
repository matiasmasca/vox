      <%= f.file_field :avatar_file , accept: 'image/png,image/gif,image/jpeg' %>
    </div>
  <div class="actions">
   <%= button_tag ' Guardar Cambios', type: 'submit', :class=>"btn btn-primary btn glyphicon glyphicon-floppy-disk" %>
